---
// import { languages } from '../../i18n/ui';
const url = Astro.url.pathname;
const idUrl = 'https://hoshi-gakuen-bali.netlify.app';
// console.log(url);
---

<select
  onchange="window.location=this.value"
  class="py-2 rounded-md text-sm font-medium bg-white dark:bg-dark text-gray-700 dark:text-gray-300 focus:ring-1 focus:ring-blue-500 focus:border-blue-500 hover:bg-gray-100 dark:hover:bg-gray-700 transition duration-150 ease-in-out uppercase"
  data-aw-select-language
>
  <option class="py-1" value="https://jpn-hoshi-gakuen-bali.netlify.app/" selected> 🇯🇵 日本語</option>
  <!-- <option class="py-1" value="http://localhost:4321/"> 🇮🇩 Indonesia</option> -->
  <option class="py-1" value={`${idUrl + url}`}> 🇮🇩 Indonesia</option>
</select>
